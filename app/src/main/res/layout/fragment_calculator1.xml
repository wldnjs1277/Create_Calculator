<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator1">

<!--    레이아웃 배치-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <FrameLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                style="@style/textview"
                android:layout_marginBottom="20dp"
                android:paddingEnd="45dp" />

            <TextView
                android:id="@+id/textView2"
                style="@style/textview"
                android:layout_marginBottom="20dp"
                android:paddingEnd="45dp"
                android:text="0"/>

        </FrameLayout>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/AC_btn"
                style="@style/gray_button"
                android:background="@drawable/button_color"
                android:text="@string/AC" />

            <Button
                android:id="@+id/P_M_btn"
                style="@style/gray_button"
                android:background="@drawable/button_color"
                android:text="@string/P_M" />

            <Button
                android:id="@+id/percent"
                style="@style/gray_button"
                android:background="@drawable/button_color"
                android:text="@string/Percent" />

            <Button
                android:id="@+id/Dvison_btn"
                style="@style/orange_button"
                android:background="@drawable/orange_color"
                android:text="@string/Divison" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Seven_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Seven" />

            <Button
                android:id="@+id/Eight_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Eight" />

            <Button
                android:id="@+id/Nine_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Nine" />

            <Button
                android:id="@+id/Multiplicaton"
                style="@style/orange_button"
                android:background="@drawable/orange_color"
                android:text="@string/Multiplication" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Four_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Four" />

            <Button
                android:id="@+id/Five_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Five" />

            <Button
                android:id="@+id/Six_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Six" />

            <Button
                android:id="@+id/Minus_btn"
                style="@style/orange_button"
                android:background="@drawable/orange_color"
                android:text="@string/Minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/One_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/One" />

            <Button
                android:id="@+id/Two_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Two" />

            <Button
                android:id="@+id/Three_btn"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Three" />

            <Button
                android:id="@+id/Plus_btn"
                style="@style/orange_button"
                android:background="@drawable/orange_color"
                android:text="@string/Plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Zero_btn"
                style="@style/zero_button"
                android:layout_width="189dp"
                android:background="@drawable/zero_button"
                android:text="@string/Zero" />

            <Button
                android:id="@+id/Colon"
                style="@style/deep_gray_button"
                android:background="@drawable/deep_gray_color"
                android:text="@string/Colon" />

            <Button
                android:id="@+id/Equals"
                style="@style/orange_button"
                android:background="@drawable/orange_color"
                android:text="@string/Equals" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>