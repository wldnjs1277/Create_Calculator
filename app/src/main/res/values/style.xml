<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    버튼색깔별 레이아웃 스타일
        shape을 oval로 줘서 버튼을 둥글게 만들려 했으나 타원형 모양이 나와서
        버튼모양을 둥글게 만들려면 weight 와 width 가 같아야 한다는 설명을 보고
        button들의 height와width에 값을 다 지정해주어 모양을 동그랗게 만듬-->
    <style name="textview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">50sp</item>
        <item name="android:gravity">bottom|right</item>
       <item name="android:text">"0"</item>
    </style>
    <style name="orange_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="gray_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="deep_gray_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">30sp</item>
    </style>

    <style name="zero_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">210dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingStart">30sp</item>
    </style>
</resources>