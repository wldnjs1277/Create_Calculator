<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">bottom|right</item>
    </style>
    <style name="orange_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="gray_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="deep_gray_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">30sp</item>
    </style>

    <style name="zero_button">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingStart">30sp</item>
    </style>
</resources>